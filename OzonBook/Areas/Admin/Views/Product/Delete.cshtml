@model Product

<div class="card shadow border-1 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="p-3" style="border: 1px solid #d3d3d3">
                <div class="form-floating py-2 col-12">
                    <label asp-for="Title" class="ms-2 label-color"></label>
                    <input asp-for="Title" class="form-control mt-2 border-0 shadow" disabled style="border: 1px solid #d3d3d3 " />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Description" class="ms-2 label-color"></label>
                    <input asp-for="Description" class="form-control mt-2 border-0 shadow" disabled style="border: 1px solid #d3d3d3" />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="ISBN" class="ms-2 label-color"></label>
                    <input asp-for="ISBN" class="form-control mt-2 border-0 shadow" disabled style="border: 1px solid #d3d3d3" />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Author" class="ms-2 label-color"></label>
                    <input asp-for="Author" class="form-control border-0 shadow" disabled style="border: 1px solid #d3d3d3" />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="ListPrice" class="ms-2 label-color"></label>
                    <input asp-for="ListPrice" class="form-control mt-2 border-0 shadow" disabled style="border: 1px solid #d3d3d3" />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Price" class="ms-2 label-color"></label>
                    <input asp-for="Price" class="form-control mt-2 border-0 shadow" disabled style="border: 1px solid #d3d3d3" />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Price50" class="ms-2 label-color"></label>
                    <input asp-for="Price50" class="form-control mt-2 border-0 shadow" disabled style="border: 1px solid #d3d3d3" />
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Price100" class="ms-2 label-color"></label>
                    <input asp-for="Price100" class="form-control mt-2 border-0 shadow" disabled style="border: 1px solid #d3d3d3" />
                           </div>
                <div class="row justify-content-center pt-2 mt-2">
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6">
                        <button type="submit" class="btn btn-danger form-control" style="border: 1px solid black">Delete</button>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">Back To List</a>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>



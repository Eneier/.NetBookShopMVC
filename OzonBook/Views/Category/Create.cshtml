@model Category


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr/>
        </div>
        <div class="mb-3 row">
            <label class="p-0">Category Name</label>
            <input type="text" class="form-control" style="border: 2px solid grey"/>
        </div>
        <div class="mb-3 row">
            <label class="p-0">Display Order</label>
            <input type="text" class="form-control" style="border: 2px solid grey" />
        </div>
        <div class="row">
            <div class="col-xl-6 col-lg-6 col-md-3 p-0">
                <button type="submit" class="btn btn-primary form-control" style="border: 1px solid black">Create</button>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-3 p-0">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back To List</a>
            </div>
        </div>
      
       
    </div>

</form>